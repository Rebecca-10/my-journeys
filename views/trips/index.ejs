<!-- views/trips/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Trips </title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>My Trips</h1>
    <a href="/users/<%=user._id%>/trips/new">Add a Trip</a>

    <ul>
      <% trips.forEach((trip)=>{ %>
      <li><%= trip.title %> at <%= trip.location%></li>
      <% }) %>
  </body>
</html>
